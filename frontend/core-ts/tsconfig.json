{
  "extends": "@tsconfig/recommended/tsconfigs.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "es2018",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./components/*"],
      "types/*": ["./types/*"],
      "constants/*": ["./constants/*"],
      "http/*": ["./http/*"],
      "payment/*": ["./payment/*"],
      "auth/*": ["./auth/*"],
      "config/*": ["./config/*"]
    }
  }
}
