{
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "__MSG_extDesc__",
  "background": {
    "service_worker": "js/worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "default_locale": "en",
  "permissions": [
    "cookies",
    "downloads",
    "downloads.shelf",
    "nativeMessaging",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "templates/popup_fallback.html",
    "default_icon": {
      "16": "/icons/whist_logo_16.png",
      "48": "/icons/whist_logo_48.png",
      "128": "/icons/whist_logo_128.png"
    }
  },
  "icons": {
    "16": "/icons/whist_logo_16.png",
    "48": "/icons/whist_logo_48.png",
    "128": "/icons/whist_logo_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/userAgent.js",
        "js/geolocation.js",
        "js/language.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
