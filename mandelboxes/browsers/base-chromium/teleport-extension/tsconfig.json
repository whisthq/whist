{
  "compilerOptions": {
    "strict": false,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "build/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    }
  }
}
